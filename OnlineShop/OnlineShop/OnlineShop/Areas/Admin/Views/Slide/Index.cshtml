@model PagedList.PagedList<Model.EF.Slide>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Slide";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}
<h2>Slide view</h2>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="input-group">
                <div class="col-md-4">
                    <a type="button" href="/Admin/Slide/Create" class="btn btn-primary">New Slide</a>
                </div>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Image</th>
                                <th>DisplayOrder</th>
                                <th>Description</th>
                                <th>Status</th>
                                <th>CreatedBy</th>
                                <th>CreateDate</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr id="row_@item.ID">
                                <td>@item.ID</td>
                                <td>
                                @item.Image
                                <img src="@item.Image" style="width:100px;height:100px;" />
                                </td>
                                <td>@item.DisplayOrder</td>
                                <td>@item.Description</td>
                                <td>@item.Status</td>
                                <td>@item.CreatedBy</td>
                                <td>@(item.CreatedDate != null ? item.CreatedDate.Value.ToString("dd-MM-yyyy") : "n/a")</td>
                                <td>
                                    <a href="/Admin/Product/Edit/@item.ID">Edit</a>|
                                    @Ajax.ActionLink("Delete", "Delete", new { id = item.ID }, new AjaxOptions
                               {
                                   Confirm = "Do you want to delete?",
                                   OnComplete = "$('#row_" + item.ID + "').remove()",
                                   HttpMethod = "Delete"
                               })
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index"))
                </div>
            </div>
        </div>
    </div>
</div>
