@model List<Model.EF.Logo>

@{
    ViewBag.Title = "Logo";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}
@section footerScript{
    <script type="text/javascript" src="~/Areas/Assets/js/Controller/logoController.js"></script>
}
<h2>Logo view</h2>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="input-group">
                <div class="col-md-4">
                    <a type="button" href="/Admin/Logo/Create" class="btn btn-primary">New Logo</a>
                </div>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Link</th>
                                <th>Image</th>
                                <th>Status</th>
                                <th>CreatedBy</th>
                                <th>CreateDate</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">
                                    <td>@item.ID</td>
                                    <td>@item.Name</td>
                                    <td>@item.Image</td>
                                    <td>
                                        <img src="@item.Image" style="width:100px;height:100px;" />
                                    </td>
                                    <td>
                                        <a href="#" class="btnx-active" data-id="@item.ID">@item.Status</a>
                                    </td>
                                    <td>@item.CreatedBy</td>
                                    <td>@(item.CreatedDate != null ? item.CreatedDate.Value.ToString("dd-MM-yyyy") : "n/a")</td>
                                    <td>
                                        <a href="/Admin/Logo/Edit/@item.ID">Edit</a>|
                                        @Ajax.ActionLink("Delete", "Delete", new { id = item.ID }, new AjaxOptions
                                   {
                                       Confirm = "Do you want to delete?",
                                       OnComplete = "$('#row_" + item.ID + "').remove()",
                                       HttpMethod = "Delete"
                                   })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>