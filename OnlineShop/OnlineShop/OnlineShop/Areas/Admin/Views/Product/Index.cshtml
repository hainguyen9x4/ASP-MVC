@model PagedList.PagedList<Model.EF.Product>
@using PagedList.Mvc;
@{
  ViewBag.Title = "Index";
  Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
  //List<Model.EF.ProductCategory> list = ViewBag.CategoryID.Items;
  var list = (List<Model.EF.ProductCategory>)ViewBag.CategoryID.Items;
}

<h2>Index</h2>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="input-group">
                <div class="col-md-4">
                    <a type="button" href="/Admin/Product/Create" class="btn btn-primary">New Product</a>
                </div>
            </div>

            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Code</th>
                                <th>Description</th>
                                <th>Avatar</th>
                                <th>Price</th>
                                <th>Quanlity</th>
                                <th>CategoryID</th>
                                <th>CreatedDate</th>
                                <th>ViewCount</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr id="row_@item.ID">
                                <td>@item.ID</td>
                                <td>@item.Name</td>
                                <td>@item.Code</td>
                                <td>@item.Description</td>
                                <td>@item.Avatar</td>
                                <td>@item.Price</td>
                                <td>@item.Quanlity</td>
                                @*<td>@(list[Convert.ToInt32(item.CategoryID.Value-1)].Name)</td>*@
                                <td>@(list.SingleOrDefault(x=>x.ID== item.CategoryID).Name)</td>
                                <td>@(item.CreatedDate != null ? item.CreatedDate.Value.ToString("dd-MM-yyyy") : "n/a")</td>
                                <td>@item.ViewCount</td>
                                <td>
                                    <a href="/Admin/Product/Edit/@item.ID">Edit</a>|
                                    @*<a href="/Admin/User/Delete/@item.ID">Delete</a>*@
                                    @Ajax.ActionLink("Delete", "Delete", new { id = item.ID }, new AjaxOptions
                               {
                                   Confirm = "Do you want to delete?",
                                   OnComplete = "$('#row_" + item.ID + "').remove()",
                                   HttpMethod = "Delete"
                               })
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index"))
                </div>
            </div>
        </div>
    </div>
</div>
