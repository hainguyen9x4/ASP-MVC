                @Html.TextBoxFor(model => model.Avatar, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Avatar, "", new { @class = "text-danger" })
                <input type="file" id="dlgbox" style="display:none" accept=".png,.jpg" />
                <button type="button" class="btn btn-success" id="btn-uploadImg">...</button>
                <div>
                    <img id="selected-img" src="@Model.Avatar" style="width:100px;height:100px;" />
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "control-label col-md-2" })
