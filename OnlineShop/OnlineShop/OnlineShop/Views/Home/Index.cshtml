
@{
    ViewBag.Title = "Home";
    Layout = "/Views/Shared/_Layout.cshtml";
    var newProduct = (List<Model.EF.Product>)ViewBag.NewProduct;
    var hotProduct = (List<Model.EF.Product>)ViewBag.HotProduct;
}
@section Slider
{
