
@{
    ViewBag.Title = "Home";
    Layout = "/Views/Shared/_Layout.cshtml";
    var newProduct = (List<Model.EF.Product>)ViewBag.NewProduct;
    var hotProduct = (List<Model.EF.Product>)ViewBag.HotProduct;
}
@section Slider
{
    @{Html.RenderAction("Slider", "Home");}
}
@section ProductCategory
{
    @{Html.RenderAction("ProductCategory", "Home");}
}
<div class="main">
    <div class="content">
        <div class="content_top">
            <div class="heading">
                <h3>New Products</h3>
            </div>
            <div class="see">
                <p><a href="/Product">See all Products</a></p>
            </div>
            <div class="clear"></div>
        </div>
        <div class="section group">
            @{
                foreach (var item in newProduct)
                {
                    <div class="grid_1_of_4 images_1_of_4">
                        <a href="detail/@item.MetaKeyword-@item.ID"><img src="@item.Avatar" alt=@item.Name /></a>
                        <h2>@item.Name</h2>
                        <div class="price-details">
                            <div class="price-number">
                                <p><span class="rupees">@(item.Price.HasValue ? item.Price.Value.ToString("N0") + "đ" : "Contact")</span></p>
                            </div>
                            <div class="add-cart">
                                <h4><a href="preview.html">Add to Cart</a></h4>
                            </div>
                            <div class="clear"></div>
                        </div>

                    </div>
                }

            }
        </div>
        <!--Pahn trang-->
        @if (ViewBag.TotalPage > 1)
        {
            var pageDisplay = (int)ViewBag.MaxPage;
            int totalPage = ViewBag.TotalPage;
            int currentPage = ViewBag.Page;

            //
            var startPageIndex = Math.Max(1, currentPage - pageDisplay / 2);
            var endPageDisplay = Math.Min(totalPage, pageDisplay + currentPage / 2);

            <nav aria-label="Page navigation">
                <ul class="pagination">
                    @if (currentPage > ViewBag.First)
                    {
                        <li>
                            <a href="?page=@ViewBag.First" aria-label="First">
                                <span aria-hidden="true">First</span>
                            </a>
                        </li>
                        <li>
                            <a href="?page=@ViewBag.Prev" aria-label="Previous">
                                <span aria-hidden="true">Previous</span>
                            </a>
                        </li>
                    }
                    @for (int i = startPageIndex; i <= endPageDisplay; i++)
                    {
                        if (currentPage == i)
                        {
                            <li><a href="?page=@i" class="btn active" title="Page @i">@i</a></li>
                        }
                        else
                        {
                            <li><a href="?page=@i" class="pos" title="Page @i">@i</a></li>
                        }
                    }
                    @if (currentPage < totalPage)
                    {
                        <li>
                            <a href="?page=@ViewBag.Next" aria-label="Next">
                                <span aria-hidden="true">Next</span>
                            </a>
                        </li>
                        <li>
                            <a href="?page=@ViewBag.Last" aria-label="Last">
                                <span aria-hidden="true">Last</span>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        }
        else
        {
            <span>Het</span>
        }
        <div class="content_bottom">
            <div class="heading">
                <h3>Feature Products</h3>
            </div>
            <div class="see">
                <p><a href="/Product">See all Products</a></p>
            </div>
            <div class="clear"></div>
        </div>
        <div class="section group">
            @{
                foreach (var item in hotProduct)
                {
                    <div class="grid_1_of_4 images_1_of_4">
                        <a href="detail/@item.MetaKeyword-@item.ID"><img src="@item.Avatar" alt="@item.Name" /></a>
                        <h2>@item.Name</h2>
                        <div class="price-details">
                            <div class="price-number">
                                <p><span class="rupees">@(item.Price.HasValue ? item.Price.Value.ToString("N0") + "đ" : "Contact")</span></p>
                            </div>
                            <div class="add-cart">
                                <h4><a href="preview.html">Add to Cart</a></h4>
                            </div>
                            <div class="clear"></div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
