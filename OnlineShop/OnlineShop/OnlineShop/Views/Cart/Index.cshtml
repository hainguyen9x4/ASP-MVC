@model List<OnlineShop.Models.CartItem>
@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Cart detail</h2>
<div class="main">
    <div class="content">
        @if (Model != null)
        {
            <table class="table table-bordered dataTable-table">
                <thead>
                    <tr>
                        <td>Name</td>
                        <td>Image</td>
                        <td>Quantity</td>
                        <td>Price</td>
                        <td>Amount</td>
                        <td>Action</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><a href="~/detail/@item.Product.MetaKeyword-@item.Product.ID">@item.Product.Name</a></td>
                            <td><img src="@item.Product.Avatar" width="100" /></td>
                            <td>
                                <input type="text" value="@item.Quantity" id="cartQuantity" />
                                <button id="increase" class="btn btn-circle"><span style="font-weight:bold; color:red">+</span></button>
                                <button id="decrease" class="btn btn-circle"><span style="font-weight:bold; color:red">-</span></button>
                            </td>
                            <td>@item.Product.Price.GetValueOrDefault().ToString("N0")</td>
                            <td>@((item.Product.Price.GetValueOrDefault()*item.Quantity).ToString("N0"))</td>
                            <td>
                                 @Ajax.ActionLink("Delete", "Delete", new { id = item.Product.ID }, new AjaxOptions
                                   {
                                       Confirm = "Do you want to delete?",
                                       OnComplete = "$('#row_" + item.Product.ID + "').remove()",
                                       HttpMethod = "Delete"
                                   })
                            </td>
                        </tr>
                    }
                    
                </tbody>
            </table>
        }
        else
        {
            <span>The is no item in cart!</span>
            }

    </div>
</div>